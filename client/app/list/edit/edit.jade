div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit
  .container
    h1 {{list.title}}
    p 
      | (active providers:
      span(ng-repeat='provider in lookupProviders')
        | {{provider.provider}},
      | )

.container
  
  .row
    .col-lg-4
      form.item-form
        label Add an item
        p.input-group
          input.form-control(type='text', placeholder='Enter an item here.', ng-model='newTerm')
          span.input-group-btn
            button.btn.btn-primary(type='submit', ng-click='addListItem()') Add New

  .row
    .col-lg-12
      h1.page-header Items:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='item in list.items')
        li
          h4 
            | {{item.term}}
            button.close(type='button', ng-click='deleteListItem(item)') Ã—
         
          hr
         
          div(ng-repeat='result in item.results')
            p {{result.description}}
            p.text-right
              | [ 
              a(href='{{result.uri}}')
                | {{result.provider}}
              | ]


  

